@import '~assets/css/variables'
@import '~assets/css/mixins'
@import '~assets/css/effects'

html
  overflow hidden !important

  body
    width 100%
    height 100%
    margin 0
    padding 0
    font-family Roboto
    font-size 16px
    box-sizing border-box
    overflow hidden

    .full-width
      width 100%

    .full-height
      height 100%

    .row
      display flex
      flex-direction row

    .column
      display flex
      flex-direction column

    .justify-center
      display flex
      justify-content center

    .align-center
      display flex
      align-items center

    .center
      display flex
      align-items center
      justify-content center

